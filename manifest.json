{
  "name": "Story Lighting Reader",
  "version": "1.0",
  "description": "Story Lighting creates an immersive storytelling experience for new and classic non-fiction long-form stories from across the web, by integrating with your Phillips Hue Lights.",
  "permissions": [
    "declarativeContent", // Host Matching
    "activeTab" // Injecting Script to Active Tab
  ],
  "background": {
    "page": "background.html"
  },
  "page_action": {
    "default_icon": {
      "16": "images/storylighting16.png",
      "32": "images/storylighting32.png",
      "48": "images/storylighting48.png",
      "128": "images/storylighting128.png"
    }
  },
  "icons": {
    "16": "images/storylighting16.png",
    "32": "images/storylighting32.png",
    "48": "images/storylighting48.png",
    "128": "images/storylighting128.png"
  },
  "manifest_version": 2
}
